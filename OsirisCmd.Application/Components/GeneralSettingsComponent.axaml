<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Application.ViewModels"
             xmlns:templates="clr-namespace:Application.Components.Templates"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Application.Components.GeneralSettingsComponent"
             x:DataType="viewModels:GeneralSettingsViewModel">
    
    <UserControl.DataContext>
        <viewModels:GeneralSettingsViewModel></viewModels:GeneralSettingsViewModel>
    </UserControl.DataContext>
    
    <DockPanel>
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding Settings.Settings}">
                <ItemsControl.DataTemplates>
                    <templates:GeneralSettingsTemplate></templates:GeneralSettingsTemplate>
                </ItemsControl.DataTemplates>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
    
</UserControl>
