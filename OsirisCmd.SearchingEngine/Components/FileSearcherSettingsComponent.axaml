<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:OsirisCmd.SearchingEngine.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OsirisCmd.SearchingEngine.Components.FileSearcherSettingsComponent"
             x:DataType="viewModels:FileSearcherSettingsViewModel">
    
    <UserControl.DataContext><viewModels:FileSearcherSettingsViewModel></viewModels:FileSearcherSettingsViewModel></UserControl.DataContext>
    
    <DockPanel>
       <DataGrid ItemsSource="{Binding Settings}">
           <DataGrid.Columns>
               <DataGridCheckBoxColumn Header="Enable Indexing" Binding="{Binding FileSearcherEnabled}"></DataGridCheckBoxColumn>
           </DataGrid.Columns>
       </DataGrid> 
    </DockPanel>
    
</UserControl>
