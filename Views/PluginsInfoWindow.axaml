<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OsirisCmd.ViewModels;assembly=OsirisCmd"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" Width="400" Height="600"
        x:Class="OsirisCmd.Views.PluginsInfoWindow"
        Title="PluginsInfoWindow"
        x:DataType="viewModels:PluginsInfoViewModel"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        >
    
    <Window.DataContext>
        <viewModels:PluginsInfoViewModel />
    </Window.DataContext>
    
    <ListBox ItemsSource="{Binding Plugins}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*, *">
                    <StackPanel x:Name="PluginInfo" Grid.Column="0" >
                        <TextBlock FontSize="16" Text="{Binding Name}" />
                        <TextBlock FontSize="12" Text="{Binding Version}" />
                        <TextBlock FontSize="12" Text="{Binding Description}" />
                    </StackPanel>
                    <ToggleSwitch Grid.Column="1" HorizontalAlignment="Right"  IsChecked="{Binding IsEnabled}" IsCheckedChanged="ToggleButton_OnIsCheckedChanged"/>
                </Grid>
                
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Window>
